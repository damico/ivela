<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/WEB-INF/decorators">
    <excludes>
        <pattern>/css/*</pattern>
        <pattern>/images/*</pattern>
        <pattern>/dwr/*</pattern>
        <pattern>/include/*</pattern>
        <pattern>/accessDenied**</pattern>
        <pattern>/admin/unitContent!**</pattern>
        <pattern>/admin/repository!**</pattern>
        <pattern>/admin/question!**</pattern>
        <pattern>/admin/course!showChat**</pattern>
        <pattern>/course!showChatStd**</pattern>
        <pattern>/fckeditor/editor/fckeditor.html*</pattern>
        <pattern>/fckeditor/**</pattern>        
        <pattern>/WEB-INF/jsp/error/exception.jsp**</pattern>
        <pattern>/struts/dojo/src/widget/templates/ComboBox.html</pattern>
        <pattern>/spacetree.jsp**</pattern>
        <pattern>/fck.jsp*</pattern>        
        <pattern>/teste.html</pattern>
        <pattern>/npd_voice.html</pattern>
        <pattern>/ivela_voice_stat.html</pattern>    
        <pattern>/waiting.jsp</pattern>  
        <pattern>/history!showPrintVersion**</pattern>
    </excludes>
    <decorator name="no_login" page="no_login.jsp">
        <pattern>/systemUser!input**</pattern>        
        <pattern>/forgotPassword**</pattern>
        <pattern>/aboutUs!list**</pattern>
        <pattern>/systemUser!add**</pattern>
        <pattern>/login**</pattern>        
    </decorator>
    <decorator name="plain" page="plain.jsp">
        
        <pattern>/forum**</pattern>
        <pattern>/topic**</pattern>
        <pattern>/post**</pattern>
        <pattern>/profile**</pattern>
        <pattern>/systemUser!inputChange**</pattern>
        <pattern>/systemUser!change**</pattern>
        <pattern>/admin/profile**</pattern>
        <pattern>/admin/repository**</pattern>
        <pattern>/message**</pattern>
        <pattern>/exam**</pattern>
        <pattern>/exercise**</pattern>
        <pattern>/repository**</pattern>
        
    </decorator>
    <decorator name="admin" page="admin.jsp">
        <pattern>/admin/*</pattern>
    </decorator>
    <decorator name="course_custom" page="course_custom.jsp">
        <pattern>/contentInfo!showContentCustom.action*</pattern>
        <pattern>/contentInfo!showTocCustom.action*</pattern>
    </decorator>
    <decorator name="course" page="course.jsp">
        <pattern>/discipline!showContent.action*</pattern>
        <pattern>/contentInfo!showContent.action*</pattern>
    </decorator>
    <decorator name="main" page="main.jsp">
        <pattern>/*</pattern>
    </decorator>
</decorators>